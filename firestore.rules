rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users: can read own profile, can read users in same org
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null;
      allow delete: if false; // only via Cloud Function
    }

    // Organizations: authenticated users can read/write their org
    match /organizations/{orgId} {
      allow read, write: if request.auth != null;

      // Meldingen subcollection
      match /meldingen/{meldingId} {
        allow read, write: if request.auth != null;
      }

      // Invoices subcollection
      match /invoices/{invoiceId} {
        allow read, write: if request.auth != null;
      }
    }

    // Subscriptions: authenticated users can read/write
    match /subscriptions/{subId} {
      allow read, write: if request.auth != null;
    }

    // Trial history: authenticated users can read and create
    match /trialHistory/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
    }

    // FCM tokens: authenticated users can manage
    match /fcmTokens/{tokenId} {
      allow read, write: if request.auth != null;
    }
  }
}
